{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "nodenext",
    "rootDir": "./src",
    "outDir": "./",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "inlineSourceMap": true,
    "declaration": true,
    "declarationDir": "./types"
  },
  "exclude": [
    "./node_modules/**/*",
    "./coverage/**/*",
    "./types/**"
  ]
}
